// Things to cover:
// - Plugin usage:
//   - Git/Checkout (built into Buildkite)
//   - No need (built into Buildkite)
//   - Node.js (no Buildkite equivalent -- up to you)
//   - HTML Publisher (no Buildkite equivalent, but annotations)
// - Matrix builds
// - Step execution
// - Parallel steps
// - Artifacts (

pipeline {
    agent none

    options {
        ansiColor('xterm')
    }

    stages {
        stage('Matrix Build') {
            matrix {
                axes {
                    axis {
                        name 'NODE_VERSION'
                        values 'Node 20.x', 'Node 22.x'
                    }
                }

                agent any

                tools {
                    nodejs "${NODE_VERSION}"
                }

                stages {
                    stage('Install') {
                        steps {
                            dir('app') {
                                sh 'npm install'
                            }
                        }
                    }

                    stage('Test') {
                        steps {
                            script {
                                parallel(
                                    "Lint": {
                                        dir('app') {
                                            sh 'npm run lint'
                                        }
                                    },
                                    "Unit Tests": {
                                        dir('app') {
                                            sh 'npm run test:unit'
                                        }
                                    }
                                )
                            }
                        }
                    }
                }

                post {
                    always {
                        publishHTML(target: [
                            reportDir: 'app/coverage',
                            reportFiles: 'index.html',
                            reportName: "Code Coverage (${NODE_VERSION})",
                            allowMissing: true,
                            alwaysLinkToLastBuild: true,
                            keepAll: false
                        ])
                    }
                }
            }
        }
    }
}
