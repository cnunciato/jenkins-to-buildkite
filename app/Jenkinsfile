// https://chatgpt.com/c/68600485-24bc-8012-b755-348f6c0eb562

pipeline {
    agent none

    // Colorize build output with the Ansicolor plugin.
    options {
        ansiColor('xterm')
    }

    stages {
        stage('Matrix Build') {

            // Test against multiple Node.js versions with matrix builds.
            matrix {
                axes {
                    axis {
                        name 'NODE_VERSION'
                        values 'Node 20.x', 'Node 22.x'
                    }
                }

                agent {
                    label "nodejs"
                }

                tools {
                    nodejs "${NODE_VERSION}"
                }

                // Run stages sequentially.
                stages {

                    // 1. Install dependencies.
                    stage('Install') {
                        steps {
                            dir('app') {
                                sh 'npm install'
                            }
                        }
                    }

                    // 2. Run pre-build checks.
                    stage('Test') {
                        steps {
                            script {

                                // Run linting and tests in parallel.
                                parallel(

                                    // Lints.
                                    "Lint": {
                                        dir('app') {
                                            sh 'npm run lint'
                                        }
                                    },
                                    
                                    // Tests.
                                    "Unit Tests": {
                                        dir('app') {
                                            sh 'npm test'
                                        }
                                    }
                                )
                            }
                        }
                    }

                    // 3. Run a build.
                    stage('Build') {
                        steps {
                            dir('app') {
                                sh 'npm run build'
                            }
                        }
                    }
                }

                // Run a post-install step that saves an artifact.
                post {
                    always {

                        // Upload the test results.
                        publishHTML(target: [
                            reportDir: 'app/coverage',
                            reportFiles: 'index.html',
                            reportName: "Code coverage (${NODE_VERSION})",
                            allowMissing: true,
                            alwaysLinkToLastBuild: true,
                            keepAll: false
                        ])
                    }
                }
            }
        }
    }
}
